        border-radius: 20px;
        padding: 30px;
        margin-top: 30px;
        box-shadow: 0 8px 20px rgba(106, 90, 205, 0.15);
    }

    h1, h2 {
        color: #6a5acd;
        margin-bottom: 20px;
    }

    .table th {
        background-color: #ffe4e1;
        color: #5c5470;
    }

    .table td {
        background-color: #ffffff;
    }

    .btn-success {
        background-color: #b3e5fc;
        border-color: #b3e5fc;
        font-weight: 500;
        color: #444;
    }

    .btn-warning {
        background-color: #ffcdd2;
        border-color: #ffcdd2;
        font-weight: 500;
        color: #444;
    }

    .btn:hover {
        background-color: #a7ffeb !important;
        border-color: #a7ffeb !important;
