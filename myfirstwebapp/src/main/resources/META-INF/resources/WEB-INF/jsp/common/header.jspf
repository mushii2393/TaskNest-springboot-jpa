    background-color: #3a3a3a;
    color: #fff;
}
.dark-theme .btn {
    border-color: #fff;
    color: #fff;
}

.button {
  position: relative;
}

.button::after {
  content: " ðŸ’—";
  opacity: 0;
  transform: scale(0);
  position: absolute;
  right: -20px;
  top: 50%;
  transform: translateY(-50%) scale(0);
  transition: transform 0.3s ease, opacity 0.3s ease;
}

.button:hover::after {
  opacity: 1;
  transform: translateY(-50%) scale(1);
}

.btn-group button {
  transition: all 0.3s ease;
  font-weight: 600;
  border-radius: 25px !important;
  padding: 10px 20px;
  font-size: 14px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

.btn-outline-primary {
  border-color: #7d7be6;
  color: #7d7be6;
}
.btn-outline-primary:hover {
  background-color: #7d7be6;
  color: white;
}

.btn-outline-success {
  border-color: #67c587;
  color: #67c587;
}
.btn-outline-success:hover {
  background-color: #67c587;
  color: white;
}

.btn-outline-warning {
  border-color: #f4b400;
  color: #f4b400;
}
